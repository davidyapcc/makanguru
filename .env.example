APP_NAME=MakanGuru
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_TIMEZONE=Asia/Kuala_Lumpur

# ============================================
# ADMIN ACCESS CONFIGURATION
# ============================================
# Access key for scraper and restaurant management pages
# Leave empty for development (allows open access)
# Set a strong key for production
APP_ADMIN_ACCESS_KEY=

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Local Development (without Docker): SQLite
DB_CONNECTION=sqlite

# Docker Development: MySQL (use .env.docker as template)
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=makanguru
# DB_USERNAME=makanguru
# DB_PASSWORD=makanguru_secret

# Production: MySQL (uncomment for production)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=makanguru
# DB_USERNAME=makanguru
# DB_PASSWORD=your_secure_password_here
# DB_COLLATION=utf8mb4_unicode_ci

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# ============================================
# CACHE & QUEUE CONFIGURATION
# ============================================

# Local Development (without Docker): Database
QUEUE_CONNECTION=database
CACHE_STORE=database

# Docker Development: Redis (use .env.docker as template)
# QUEUE_CONNECTION=redis
# CACHE_STORE=redis
# CACHE_PREFIX=makanguru

# Production: Redis (recommended)
# QUEUE_CONNECTION=redis
# CACHE_STORE=redis
# CACHE_PREFIX=makanguru

MEMCACHED_HOST=127.0.0.1

# ============================================
# REDIS CONFIGURATION
# ============================================

REDIS_CLIENT=phpredis
# Local/Production: 127.0.0.1
# Docker: redis (service name)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ============================================
# MAKANGURU SPECIFIC CONFIGURATION
# ============================================

# Google Gemini AI Configuration
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=

# Groq AI Configuration
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=

# Optional: Set default AI provider (gemini|groq)
AI_PROVIDER=gemini

# Optional: Groq model configuration (if using Groq)
GROQ_OPENAI_MODEL=openai/gpt-oss-120b
GROQ_META_MODEL=llama-3.3-70b-versatile
GROQ_DEFAULT_MODEL=llama-3.1-8b-instant

# Chat Configuration
# Rate limiting: Maximum messages per time window (default: 5)
CHAT_RATE_LIMIT_MAX=5
# Rate limiting: Time window in seconds (default: 60 = 1 minute)
CHAT_RATE_LIMIT_WINDOW=60
# Default persona: makcik, gymbro, or atas (default: makcik)
CHAT_DEFAULT_PERSONA=makcik
# Default AI model: gemini, groq-openai, or groq-meta (default: gemini)
CHAT_DEFAULT_MODEL=gemini
