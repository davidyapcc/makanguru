# MySQL Configuration for MakanGuru Docker Development
# Optimized for Laravel 12 and local development

[mysqld]
# Character Set and Collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
default-authentication-plugin = mysql_native_password

# Performance Settings (Development)
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Query Cache (Disabled in MySQL 8.0+, kept for reference)
# query_cache_type = 0
# query_cache_size = 0

# Connection Settings
max_connections = 100
wait_timeout = 600
interactive_timeout = 600

# Logging
general_log = 0
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow-query.log
long_query_time = 2

# Binary Logging (Disabled for development)
skip-log-bin

# Timezone
default-time-zone = '+08:00'

# SQL Mode
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
